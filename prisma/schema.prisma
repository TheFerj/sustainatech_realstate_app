// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = env("DATABASE_URL")
}


model User {
  id              Int      @id @default(autoincrement())
  email           String   @unique
  password        String
  role            String?
  name            String?
  business_name   String?
  business_type   String?
  location        String?
  contact_number  String?
  posts           Post[]  @relation("userPost")
  appliances      Appliances[] @relation("userAppliance")
  wall            Walls[] @relation("userWalls")
  energyTracker   EnergyTracker[]@relation("userEnergy")
}

model Post {
  id         Int       @id @default(autoincrement())
  title      String
  content    String
  createdAt  DateTime  @default(now())
  urgency    String?
  userId     Int
  user       User      @relation("userPost", fields: [userId], references: [id])
  status String?
  type String?
}

model Appliances {
  id         Int       @id @default(autoincrement())
  type      String?
  brand    String?
  energy_rating    String?
  userId     Int
  user       User      @relation("userAppliance", fields: [userId], references: [id])
  model String?
}

model Walls{
  id         Int       @id @default(autoincrement())
  type    String?
  details String?
  userId     Int
  user       User      @relation("userWalls", fields: [userId], references: [id])
}
model EnergyTracker{
  id         Int       @id @default(autoincrement())
  electricBill    Float?
  energyUsage String?
  billDate DateTime
  userId     Int
  user       User      @relation("userEnergy", fields: [userId], references: [id])
}